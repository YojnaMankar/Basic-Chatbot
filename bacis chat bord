import random
import datetime

def get_time():
    now = datetime.datetime.now()
    return now.strftime("%H:%M:%S")

def get_date():
    today = datetime.date.today()
    return today.strftime("%B %d, %Y")

def random_color():
    colors = ["Red", "Blue", "Green", "Yellow", "Pink", "Purple", "Orange", "White", "Black", "Brown"]
    return random.choice(colors)

def add_numbers(num1, num2):
    return num1 + num2

def subtract_numbers(num1, num2):
    return num1 - num2

def multiply_numbers(num1, num2):
    return num1 * num2

def divide_numbers(num1, num2):
    if num2 == 0:
        return "Cannot divide by zero!"
    return num1 / num2

def chatbot():
    print("Hello! I'm your chatbot. How can I assist you today?")
    
    while True:
        user_input = input("\nYou: ").lower()

        if "hello" in user_input or "hi" in user_input:
            print("Chatbot: Hello! How are you?")

        elif "time" in user_input:
            print(f"Chatbot: The current time is {get_time()}.")

        elif "date" in user_input:
            print(f"Chatbot: Today's date is {get_date()}.")

        elif "color" in user_input:
            print(f"Chatbot: Here's a random color: {random_color()}.")

        elif "add" in user_input:
            try:
                nums = input("Enter two numbers separated by space: ").split()
                num1, num2 = int(nums[0]), int(nums[1])
                print(f"Chatbot: The sum is {add_numbers(num1, num2)}.")
            except:
                print("Chatbot: Please enter valid numbers.")

        elif "subtract" in user_input:
            try:
                nums = input("Enter two numbers separated by space: ").split()
                num1, num2 = int(nums[0]), int(nums[1])
                print(f"Chatbot: The result is {subtract_numbers(num1, num2)}.")
            except:
                print("Chatbot: Please enter valid numbers.")

        elif "multiply" in user_input:
            try:
                nums = input("Enter two numbers separated by space: ").split()
                num1, num2 = int(nums[0]), int(nums[1])
                print(f"Chatbot: The result is {multiply_numbers(num1, num2)}.")
            except:
                print("Chatbot: Please enter valid numbers.")

        elif "divide" in user_input:
            try:
                nums = input("Enter two numbers separated by space: ").split()
                num1, num2 = int(nums[0]), int(nums[1])
                print(f"Chatbot: The result is {divide_numbers(num1, num2)}.")
            except:
                print("Chatbot: Please enter valid numbers.")

        elif "your name" in user_input:
            print("Chatbot: I am your friendly chatbot!")

        elif "age" in user_input:
            print("Chatbot: I am timeless! Age is just a number.")

        elif "weather" in user_input:
            print("Chatbot: I can't predict the weather yet, but it's always sunny in my world!")

        elif "day" in user_input:
            print(f"Chatbot: Today is {datetime.datetime.now().strftime('%A')}.")

        elif "bye" in user_input or "exit" in user_input:
            print("Chatbot: Goodbye! Have a great day!")
            break

        # Adding more random features for fun
        elif "joke" in user_input:
            jokes = [
                "Why donâ€™t scientists trust atoms? Because they make up everything!",
                "Why did the chicken join a band? Because it had the drumsticks!",
                "What do you call fake spaghetti? An impasta!"
            ]
            print(f"Chatbot: {random.choice(jokes)}")

        elif "quote" in user_input:
            quotes = [
                "The only limit to our realization of tomorrow is our doubts of today. - Franklin D. Roosevelt",
                "In the middle of every difficulty lies opportunity. - Albert Einstein",
                "Life is 10% what happens to us and 90% how we react to it. - Charles R. Swindoll"
            ]
            print(f"Chatbot: {random.choice(quotes)}")

        elif "movie" in user_input:
            print("Chatbot: I recommend watching 'Inception' or 'The Matrix' if you're into mind-bending films.")

        elif "game" in user_input:
            games = ["Chess", "Sudoku", "Scrabble", "Poker", "Checkers"]
            print(f"Chatbot: How about playing {random.choice(games)} today?")

        elif "number" in user_input:
            print(f"Chatbot: Here's a random number for you: {random.randint(1, 100)}")

        elif "motivate" in user_input:
            motivations = [
                "Believe in yourself! You can achieve anything.",
                "The only way to do great work is to love what you do.",
                "Keep pushing forward. You're doing great!"
            ]
            print(f"Chatbot: {random.choice(motivations)}")

        elif "coin" in user_input:
            print(f"Chatbot: Flipping a coin... It's {random.choice(['Heads', 'Tails'])}!")

        elif "roll" in user_input:
            print(f"Chatbot: Rolling a dice... You got {random.randint(1, 6)}!")

        # Responds when unknown commands are entered
        else:
            print("Chatbot: I'm sorry, I don't understand that. Could you try asking something else?")


if __name__ == "__main__":
    chatbot()
